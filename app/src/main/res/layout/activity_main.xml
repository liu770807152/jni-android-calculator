<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="text"
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:background="@drawable/srceen"
            android:maxLines="1"
            android:gravity="end|bottom"
            android:paddingBottom="15dp"
            android:textSize="45sp"
            tools:text="0"
            android:importantForAutofill="no" />
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/screen"
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/clr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_sign"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="CLR"
                android:textSize="30sp" />
            <Button
                android:id="@+id/leftBracket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_sign"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="("
                android:textSize="30sp" />
            <Button
                android:id="@+id/rightBracket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_sign"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:textColor="@color/white"
                android:text=")"
                android:textSize="30sp" />
            <Button
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_sign"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="+"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/first"
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="7"
                android:textSize="30sp" />
            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="8"
                android:textSize="30sp" />
            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="9"
                android:textSize="30sp" />
            <Button
                android:id="@+id/reduce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_sign"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="-"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/second"
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="4"
                android:textSize="30sp" />
            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="5"
                android:textSize="30sp" />
            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="6"
                android:textSize="30sp" />
            <Button
                android:id="@+id/ride"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_sign"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="ร"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/third"
            android:id="@+id/fourth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                android:gravity="center"
                style="@style/Widget.AppCompat.ButtonBar"
                android:text="1"
                android:textSize="30sp" />
            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                android:gravity="center"
                style="@style/Widget.AppCompat.ButtonBar"
                android:text="2"
                android:textSize="30sp"
                />
            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="3"
                android:textSize="30sp" />
            <Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_sign"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="รท"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/fourth"
            android:id="@+id/fifth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/selector_number"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="0"
                android:textSize="30sp" />
            <Button
                android:id="@+id/point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_number"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="."
                android:textSize="30sp"
                />
            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_equal"
                style="@style/Widget.AppCompat.ButtonBar"
                android:gravity="center"
                android:text="="
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>